<?xml version="1.0" encoding="utf-8"?><!-- 每页title -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/title_bar_bg"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/left_btn"
        style="@style/text_13_s_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/common_btn_drawable"
        android:contentDescription="@null"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title_txt"
        style="@style/text_17_s_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="asdfasdf" />

    <TextView
        android:id="@+id/right_btn"
        style="@style/text_13_s_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/common_btn_l_drawable"
        android:contentDescription="@null"
        android:gravity="center"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="adff" />

    <TextView
        android:id="@+id/right_btn_sure"
        style="@style/text_13_s_w"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/common_btn_drawable"
        android:contentDescription="@null"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="确认"
        android:visibility="invisible" />
</RelativeLayout>