<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/item_title" />

        <RelativeLayout
            android:id="@+id/settings_msg_center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_button_height"
            android:layout_margin="10dip"
            android:background="@drawable/settings_button">

            <TextView
                android:id="@+id/wallet_available_balance"
                style="@style/text_15_s_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dip"
                android:text="@string/settings_msg_center"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/notice_logo_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/wallet_available_balance"
                android:adjustViewBounds="true"
                android:background="@drawable/notice_logo"
                android:contentDescription="@null"
                android:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:background="@drawable/shape_border_corner"
            android:orientation="vertical">

            <TextView
                android:id="@+id/settings_help"
                style="@style/text_15_s_b"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_button_height"
                android:background="@drawable/settings_button_top"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:text="@string/settings_help"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/settings_feedback"
                style="@style/text_15_s_b"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_button_height"
                android:background="@drawable/settings_button_middle"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:text="@string/settings_feedback"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/settings_customer"
                style="@style/text_15_s_b"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_button_height"
                android:background="@drawable/settings_button_middle"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:text="@string/settings_customer"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/settings_about"
                style="@style/text_15_s_b"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_button_height"
                android:background="@drawable/settings_button_bottom"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:text="@string/settings_about"
                android:textColor="@color/black" />

            <!--
                 <TextView
                android:id="@+id/settings_grade"
                android:layout_width="match_parent"
                android:layout_height="@dimen/settings_button_height"
                android:background="@drawable/settings_button_bottom"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:textColor="@color/black"
                android:text="@string/settings_grade"
                android:textSize="20sp" />
            -->
        </LinearLayout>
    </LinearLayout>

</ScrollView>