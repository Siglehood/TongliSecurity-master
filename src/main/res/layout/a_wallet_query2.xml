<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/item_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/wallet_query_all"
            style="@style/text_15_s_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/account_tab1"
            android:gravity="center"
            android:text="@string/wallet_query_all" />

        <TextView
            android:id="@+id/wallet_query_recharge"
            style="@style/text_15_s_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/account_tab2"
            android:gravity="center"
            android:text="@string/wallet_query_recharge" />

        <TextView
            android:id="@+id/wallet_query_redeem"
            style="@style/text_15_s_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/account_tab3"
            android:gravity="center"
            android:text="@string/wallet_query_redeem" />

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/wallet_query_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
